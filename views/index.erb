<h2>Welcome to Pizza Shop!</h2>



<div class="row">
	<% @products.each do |p| %>
		<div class="col-md-4"> 
			<div>
				<%= p.title %>
			</div>			 
			<div>
				<img src='<%= p.path_to_image %>'  width='200px' height='150px' />
			</div>
			<div>
				<%= p.description %>
			</div>
			<div>
				Size: <%= p.size %> cm. 
			</div>
			<div>
				Price: <%= p.price %> RUB. 
			</div>	
			<div>
				<button type="button" class="btn btn-sm btn-success">Add to cart</button>
			</div>		 			
		</div>				
	<% end %>		
</div>

